	<!-- Emergency Procedures -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Emergency Response Procedures</h2>
				
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
					<div class="bg-red-50 p-8 rounded-lg">
						<h3 class="text-2xl font-bold text-gray-900 mb-6">Medical Emergency Protocol</h3>
						
						<div class="space-y-6">
							<div class="border-l-4 border-red-500 pl-4">
								<h4 class="text-lg font-semibold text-gray-900 mb-2">Immediate Response (0-2 minutes)</h4>
								<ul class="space-y-2 text-gray-700">
									<li>• Assess client's condition and vital signs</li>
									<li>• Activate emergency medical protocols</li>
									<li>• Contact emergency medical services if needed</li>
									<li>• Administer emergency medications if appropriate</li>
								</ul>
							</div>
							
							<div class="border-l-4 border-orange-500 pl-4">
								<h4 class="text-lg font-semibold text-gray-900 mb-2">Stabilization (2-10 minutes)</h4>
								<ul class="space-y-2 text-gray-700">
									<li>• Provide medical support and monitoring</li>
									<li>• Coordinate with emergency medical personnel</li>
									<li>• Document all interventions and responses</li>
									<li>• Notify medical director and supervisory staff</li>
								</ul>
							</div>
							
							<div class="border-l-4 border-yellow-500 pl-4">
								<h4 class="text-lg font-semibold text-gray-900 mb-2">Follow-up (10+ minutes)</h4>
								<ul class="space-y-2 text-gray-700">
									<li>• Continue monitoring and support</li>
									<li>• Coordinate hospital transfer if necessary</li>
									<li>• Complete incident documentation</li>
									<li>• Conduct post-incident review and analysis</li>
								</ul>
							</div>
						</div>
					</div>

					<div class="bg-blue-50 p-8 rounded-lg">
						<h3 class="text-2xl font-bold text-gray-900 mb-6">Psychological Crisis Protocol</h3>
						
						<div class="space-y-6">
							<div class="border-l-4 border-blue-500 pl-4">
								<h4 class="text-lg font-semibold text-gray-900 mb-2">De-escalation (0-5 minutes)</h4>
								<ul class="space-y-2 text-gray-700">
									<li>• Implement grounding techniques</li>
									<li>• Provide reassurance and emotional support</li>
									<li>• Create safe, calming environment</li>
									<li>• Use therapeutic communication methods</li>
								</ul>
							</div>
							
							<div class="border-l-4 border-indigo-500 pl-4">
								<h4 class="text-lg font-semibold text-gray-900 mb-2">Intervention (5-15 minutes)</h4>
								<ul class="space-y-2 text-gray-700">
									<li>• Apply crisis intervention techniques</li>
									<li>• Consider medication if medically appropriate</li>
									<li>• Engage additional support personnel</li>
									<li>• Maintain continuous monitoring</li>
								</ul>
							</div>
							
							<div class="border-l-4 border-purple-500 pl-4">
								<h4 class="text-lg font-semibold text-gray-900 mb-2">Resolution (15+ minutes)</h4>
								<ul class="space-y-2 text-gray-700">
									<li>• Continue therapeutic support</li>
									<li>• Plan extended care if needed</li>
									<li>• Document crisis and interventions</li>
									<li>• Schedule follow-up care</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


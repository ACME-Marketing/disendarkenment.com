	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-purple-900 via-indigo-900 to-blue-900 text-white py-16">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-6">Safety Protocols</h1>
				<p class="text-xl text-purple-100 mb-8">
					Comprehensive safety measures ensuring secure and supportive psychedelic journey experiences
				</p>
			</div>
		</div>
	</section>

	<!-- Pre-Journey Safety -->

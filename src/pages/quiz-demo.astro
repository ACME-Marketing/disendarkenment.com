---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTAButton from '../components/CTAButton.astro';
import ModalQuiz from '../components/ModalQuiz.astro';
import ResultsModal from '../components/ResultsModal.astro';

const title = 'Quiz Demo - Psychedelic Therapy Readiness Assessment';
const description = 'Interactive demo of the new modal-based psychedelic therapy readiness quiz system';
---

<BaseLayout title={title} description={description}>
  <main class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <!-- Hero Section -->
      <section class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Quiz System Demo
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Experience our new interactive readiness assessment quiz. This demo showcases the modal-based quiz system that can be triggered from any CTA button on your site.
        </p>
      </section>

      <!-- Demo Section -->
      <section class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Interactive Demo</h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Primary CTA -->
          <div class="text-center p-6 bg-purple-50 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Primary CTA Button</h3>
            <p class="text-gray-600 mb-4">Standard primary button with quiz trigger</p>
            <CTAButton 
              text="Take the Readiness Quiz" 
              variant="primary" 
              size="lg"
            />
          </div>

          <!-- Secondary CTA -->
          <div class="text-center p-6 bg-green-50 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Secondary CTA Button</h3>
            <p class="text-gray-600 mb-4">Alternative styling for different contexts</p>
            <CTAButton 
              text="Check Your Readiness" 
              variant="secondary" 
              size="lg"
            />
          </div>

          <!-- Outline CTA -->
          <div class="text-center p-6 bg-blue-50 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Outline CTA Button</h3>
            <p class="text-gray-600 mb-4">Subtle outline style for secondary placement</p>
            <CTAButton 
              text="Start Assessment" 
              variant="outline" 
              size="lg"
            />
          </div>

          <!-- Small CTA -->
          <div class="text-center p-6 bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Small CTA Button</h3>
            <p class="text-gray-600 mb-4">Compact size for inline placement</p>
            <CTAButton 
              text="Quiz" 
              variant="primary" 
              size="sm"
            />
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="bg-white rounded-lg shadow-lg p-8 mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Quiz Features</h2>
        
        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center p-4">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Step-by-Step</h3>
            <p class="text-gray-600 text-sm">Questions appear one at a time for better focus</p>
          </div>

          <div class="text-center p-4">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Progress Tracking</h3>
            <p class="text-gray-600 text-sm">Visual progress bar shows completion status</p>
          </div>

          <div class="text-center p-4">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Instant Results</h3>
            <p class="text-gray-600 text-sm">Get personalized recommendations immediately</p>
          </div>
        </div>
      </section>

      <!-- Integration Guide -->
      <section class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Integration Guide</h2>
        
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">1. Add CTA Buttons</h3>
            <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code><CTAButton 
  text="Take the Readiness Quiz" 
  variant="primary" 
  size="lg" 
/></code></pre>
          </div>

          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">2. Include Modal Components</h3>
            <pre class="bg-gray-100 p-4 rounded-lg text-sm overflow-x-auto"><code><ModalQuiz />
<ResultsModal /></code></pre>
          </div>

          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">3. Customize Styling</h3>
            <p class="text-gray-600">All components use Tailwind CSS and can be customized via props or CSS classes.</p>
          </div>
        </div>
      </section>

      <!-- Test Instructions -->
      <section class="mt-12 text-center">
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-yellow-800 mb-2">Testing Instructions</h3>
          <p class="text-yellow-700 mb-4">
            Click any of the CTA buttons above to test the full quiz flow. The quiz will open in a modal and guide you through the assessment.
          </p>
          <p class="text-sm text-yellow-600">
            Note: This is a demo environment. In production, the quiz will integrate with your existing booking system.
          </p>
        </div>
      </section>
    </div>
  </main>

  <!-- Include modal components -->
  <ModalQuiz />
  <ResultsModal />
</BaseLayout>

<style>
  /* Additional demo styles */
  .demo-section {
    transition: all 0.3s ease;
  }
  
  .demo-section:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
</style>